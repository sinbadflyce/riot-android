    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <corners android:radius="5dp" />
            <gradient android:angle="0" android:endColor="#3FC5B9" android:startColor="#00C0D8" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:endColor="#A2ACB9" android:startColor="#A2ACB9" />

        </shape>
    </item>
</selector>