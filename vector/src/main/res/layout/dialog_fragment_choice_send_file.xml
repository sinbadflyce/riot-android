<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_dialog_choice_call"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentStart="true"
            android:layout_margin="5dip"
            android:padding="5dip"
            android:src="?attr/drawable_close_dialog" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="72dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="@string/title_dialog_choice_send_file"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/color_text_app_default"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_send_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="42dip"
                    android:layout_height="42dip"
                    android:padding="10dip"
                    android:src="?attr/drawable_audio_attachment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_choice_media"
                    android:textColor="?attr/color_text_app_default"></TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1px"
                android:background="?attr/color_text_app_default"></View>

            <LinearLayout
                android:id="@+id/btn_send_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="42dip"
                    android:layout_height="42dip"
                    android:padding="10dip"
                    android:src="?attr/drawable_file_attachment" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_choice_file"
                    android:textColor="?attr/color_text_app_default"></TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>